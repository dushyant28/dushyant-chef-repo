#!/bin/sh
device_name=$1                              # Device name, this would come from AWS
mount_point=$2                              # User input
/sbin/mkfs -t ext3 $1                  # using ext3 file system
/bin/mkdir $2                          # creating the mount directory
/bin/mount -t ext3 $1 $2
echo $1 $2 ext3 defaults 0 0  >> /etc/fstab # Making the entry in /etc/fstab